<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?attr/colorBackground">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:transitionName="logoTransition"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:transitionName="titleTransition"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join us for a smarter parking experience"
        android:textSize="14sp"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:transitionName="subTitleTransition"/>

    <!-- Student ID Input -->
    <EditText
        android:id="@+id/edtStudentId"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Student ID"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:textColor="?attr/editTextColor"
        android:textColorHint="#8a8a8a"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:transitionName="studentIdTransition"/>

    <!-- Sign Up Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSign"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="SIGN UP"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button"
        app:backgroundTint="@null"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtStudentId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:transitionName="signUpButtonTransition"/>

    <!-- Redirect Text -->
    <TextView
        android:id="@+id/tvAlreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALREADY HAVE AN ACCOUNT?"
        android:textColor="?attr/textColor"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:transitionName="alreadyAccountTransition"/>

    <!-- Sign In Here -->
    <TextView
        android:id="@+id/tvSignInHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN HERE"
        android:textColor="#7ED957"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvAlreadyAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:transitionName="signInHereTransition"/>
</androidx.constraintlayout.widget.ConstraintLayout>
